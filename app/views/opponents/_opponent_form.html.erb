<%= form_with model: @opponent do |f| %>
    <div class="form-group row">
        <%= f.label :username, "Username:", class: "col-sm-2 col-form-label" %>
        <br>
        <%= f.text_field :username, class: "form-control" %>
    </div>
    <br>
    <fieldset class="form-group">
        <div class="row">
        <%= f.label :gender, "Gender:", class: "col-form-label col-sm-2 pt-0" %>        
            <div class="col-sm-10">
                <div class="form-check">
                <%= f.label :Male %>
                <%= radio_button_tag("opponent[gender]", "Male") %>
                <%= f.label :Female %>
                <%= radio_button_tag("opponent[gender]", "Female") %>
                </div>
            </div>
        </div>
    </fieldset>

    <div class="form-group row">
        <%= f.label :ranking, "Ranking:", class: "col-sm-2 col-form-label" %>
        <%= f.number_field :ranking, min: 100, max: 2800, class: "form-control" %>
    </div>

    <div class="form-group row">
    <%= f.submit %>
    </div>
<% end %>

    <div class="form-group row">
    <%= button_to "Cancel", player_path(current_player), method: :get %>
    </div>