<%= form_with model: @player do |f| %>
    <div class="form-group row">
        <%= f.label :username, class: "col-sm-2 col-form-label" %>
        <%= f.text_field :username, class: "form-control" %>
    </div>
    <br>
    <fieldset class="form-group">
        <div class="row">
            <%= f.label :gender, class: "col-form-label col-sm-2 pt-0" %>
            <div class="col-sm-10">
                <div class="form-check">
                <%= f.radio_button(:gender, "male") %>
                <%= f.label :male %>
                <%= f.radio_button(:gender, "female") %>
                <%= f.label :female %>
                </div>
            </div>
        </div>
    </fieldset>

    <div class="form-group row">
        <%= f.label :email, class: "col-sm-2 col-form-label" %>
        <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group row">
        <%= f.label :ranking, class: "col-sm-2 col-form-label" %>
        <%= f.number_field :ranking, in: 100..2800, step: 1, placeholder: @player.ranking, class: "form-control" %>
    </div>
    
    <div class="form-group row">
        <%= f.label :password, class: "col-sm-2 col-form-label" %>
        <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group row">
    <%= f.submit %>
    </div>
<% end %>
