

<div id="player_stats" style="border: solid black;">

    <p>Username: <%= @player.username %></p>
    
    <p>Ranking: <%= @player.ranking %></p>
    
    <p>Percentage Wins: <%= win_percentage(@player) %></p>

    <span>Wins: <%= @player.wins %> |</span>
    <span>Losses: <%= @player.losses %></span>
    <br>
    <%= link_to "Update Player", edit_player_path(@player) %>
</div>
<br>

<%= link_to "Add Match", new_match_path %>
<br>

<div id="player_matches" style="border: solid black;">
    <table>
        <thead>
            <tr>
                <th > All Matches </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Date</th> 
                <th>Status</th>
                <th>Opponent</th>
                <th>Best of</th>
                <th>Scores</th>
                <th>Notes</th>
            </tr>
            <% @player.matches.each do |m| %>
            <tr>
                <td><%= m.date %></td>
                <td><%= match_status(m) %></td>
                <td><%= m.opponent.username %></td>
                <td><%= m.match_type %></td>
                <td><%= match_scores(m) %></td>
                <td><%= m.notes %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>